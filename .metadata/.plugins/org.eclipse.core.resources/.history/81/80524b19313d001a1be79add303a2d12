package com.pablomonteserin;


import java.util.Scanner;


public class Main {
	
	public int suma(int a, int b) {
		int s = a + b;
		return s;
	}
	
	public int resta (int a, int b) {
		int s = a - b;
		return s;
	}
	
	public int multiplicacion (int a, int b) {
		int s = a * b;
		return s;
	}
	
	public int division (int a, int b) {
		int s = a / b;
		return s;
	}
	
	

	public static void main(String[] args) {
		Main main = new Main();
		Scanner scanner = new Scanner(System.in);
		System.out.println("Introducir primer numero: ");
	    int numero1 = scanner.nextInt();
	    
		System.out.println("Introducir segundo numero: ");
		int numero2 = scanner.nextInt();
		
		System.out.println("Pon la operacion a realizar (suma, resta, multiplicacion, division)");
		String operacion = scanner.nextLine();
		int resultado;
		
		if (operacion.equals("suma")) {
			resultado = main.suma(numero1, numero2);
			
		}else if (operacion.equals("resta")) {
			resultado = main.resta(numero1, numero2);
			
		}else if (operacion.equals("multiplicacion")) {
			resultado = main.multiplicacion(numero1, numero2);
			
		}else if (operacion.equals("division")) {
			resultado = main.division(numero1, numero2);
	}
		System.out.println("El resultado es: "+ resultado);

	
	}		
}